<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".view.ScrenChamadosActivity"
    android:background="@color/blue_ligth_one"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="20dp"
    android:layout_marginTop="16dp"
    app:cardCornerRadius="16dp"
    android:layout_marginBottom="10dp"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue_ligth"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/textTitleChamado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_card_chamado"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/textNumeroChamado"
                android:layout_width="wrap_content"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:text="@string/textNumeroChamado"
                android:layout_weight="1"
                android:textSize="20sp"
                android:layout_marginTop="10dp"

                />

        </LinearLayout>

        <TextView
            android:id="@+id/textDescChamado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_desc_chamado"
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"

            android:layout_marginTop="16dp"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">

            <TextView
                android:id="@+id/textPrioridadeChamado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/textPrioridadeChamado"
                app:layout_constraintTop_toBottomOf="@+id/imageChamado"
                android:textSize="18sp"
                android:textStyle="bold"



                />
            <TextView
                android:id="@+id/textPrioridade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/prioridade"
                android:textSize="18sp"
                android:layout_marginStart="10dp"

                />

        </LinearLayout>
        <ImageView
            android:id="@+id/imageChamado"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_baseline_computer_24"
            android:layout_gravity="center"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <Button
                android:id="@+id/textDetalhes"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                style="@android:style/Widget.Material.Button.Borderless"
                android:text="@string/textDetalhes"
                android:textSize="18sp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                />

            <Button
                android:id="@+id/textComentario"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                style="@android:style/Widget.Material.Button.Borderless"
                android:text="@string/textComentario"
                android:textSize="18sp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="10dp"
                android:layout_gravity="end"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>